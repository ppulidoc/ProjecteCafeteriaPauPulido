<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".BegudesFragment">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="183dp"
            android:layout_height="42dp"
            android:layout_marginTop="104dp"
            android:text="BEGUDES"
            android:textAlignment="center"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textCafeLlet"
            android:layout_width="153dp"
            android:layout_height="35dp"
            android:layout_marginTop="240dp"
            android:text="Cafe amb llet"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/quantCafeLlet"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="92dp"
            android:ems="10"
            android:hint="Quantitat"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/textCafeLlet"
            app:layout_constraintTop_toBottomOf="@+id/textTitle" />

        <TextView
            android:id="@+id/textXoco"
            android:layout_width="153dp"
            android:layout_height="35dp"
            android:layout_marginTop="316dp"
            android:text="Xocolata desfeta"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/quantXoco"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="164dp"
            android:ems="10"
            android:hint="Quantitat"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/textCafeLlet"
            app:layout_constraintTop_toBottomOf="@+id/textTitle" />

        <TextView
            android:id="@+id/textSuc"
            android:layout_width="153dp"
            android:layout_height="35dp"
            android:layout_marginTop="384dp"
            android:text="Suc de taronja"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/quantSuc"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="236dp"
            android:ems="10"
            android:hint="Quantitat"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/textCafeLlet"
            app:layout_constraintTop_toBottomOf="@+id/textTitle" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Seguent ->"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSuc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>